# Additional .env variables for mail configuration

# SMTP Timeout (seconds) - increase if experiencing timeout errors
MAIL_TIMEOUT=30

# SSL/TLS Verification Settings
MAIL_VERIFY_PEER=true
MAIL_VERIFY_PEER_NAME=true
MAIL_ALLOW_SELF_SIGNED=false

# Recipient email for contact form submissions
MAIL_TO_ADDRESS=contact@arafahagro.com

# Queue Connection for email sending (options: sync, database, redis)
# Use 'database' for production with queue worker
# Use 'sync' for immediate processing without queue worker
QUEUE_CONNECTION=sync
MAIL_QUEUE_CONNECTION=
