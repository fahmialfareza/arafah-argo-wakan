# Laravel Lumen Application Configuration

# Application Information
APP_NAME="Arafah Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Logging
LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=arafah_db
DB_USERNAME=root
DB_PASSWORD=

# Cache & Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# ==========================================
# MAIL/SMTP CONFIGURATION
# ==========================================

# Mail Driver (options: smtp, sendmail, mailgun, mandrill, ses, sparkpost)
MAIL_DRIVER=smtp

# SMTP Host - Replace with your provider's SMTP host
# Examples:
#   - Mailtrap: smtp.mailtrap.io
#   - Gmail: smtp.gmail.com
#   - SendGrid: smtp.sendgrid.net
#   - Custom: your-smtp-server.com
MAIL_HOST=smtp.mailtrap.io

# SMTP Port - Replace with your provider's SMTP port
# Common ports:
#   - 465 (SSL) - secure connection
#   - 587 (TLS) - secure connection
#   - 25 (Plain) - unencrypted
#   - 2525 (Mailtrap alternative)
MAIL_PORT=2525

# SMTP Username - Replace with your SMTP username
# Usually an email address or account ID
MAIL_USERNAME=your_username

# SMTP Password - Replace with your SMTP password
# Use environment secrets in production!
MAIL_PASSWORD=your_password

# Email Encryption Protocol (options: tls, ssl, null)
# Use 'tls' for port 587
# Use 'ssl' for port 465
MAIL_ENCRYPTION=tls

# From Email Address - The email address that appears as sender
# Should be a verified address in your email provider
MAIL_FROM_ADDRESS=noreply@arafah.com

# From Email Name - The name that appears with the sender's email
MAIL_FROM_NAME="Arafah"

